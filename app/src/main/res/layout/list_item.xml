<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardCornerRadius="8dp"
    app:contentPaddingBottom="1sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:visibility="visible"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_alignStart="@id/Image"
            android:id="@+id/details">

            <TextView
                android:id="@+id/Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mara Kofoed and A. Pawlowski"
                android:textSize="16sp"
                android:textStyle="italic"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="8sp"
                android:hint="Sat, June 25, 2022"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_alignStart="@id/details"
            android:id="@+id/contents">

            <TextView
                android:id="@+id/Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Doctor told her sex was painful because of her age. It turned out to be ovarian cancer"
                android:textSize="23sp"
                android:textStyle="bold"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mara Kofoed, 45, was diagnosed with ovarian cancer in December 2021 after months trying to figure out vague and seemingly unrelated symptoms. She found doctors dismissed them at every turn and didnâ€™t connect them to a tumor. It took a visit to an emergency room to finally get answers. Kofoed, who lives in Hudson Valley, New York, shared her story with TODAY.

It was the biggest shock of my life to find out that I had ovarian cancer. I would have suspected maybe breast cancer because my grandmother had it, but ovarian cancer was very, very off the radar.

Women need to be trained on this more. We know about breast cancer"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>